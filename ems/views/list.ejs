<!DOCTYPE html>
<html lang="en">
<% include header %>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-2">
                    <% include navbar %>
                </div>
                <div class="col-10">
                    <% if(employee.length) { %>
                    <h2  class="text-center">Employee List</h2><br />
                    <div class="card" style="margin-top: 0">
                        <table class="table table‐hover">
                            <thead class="thead‐dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Functions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% employee.forEach(function (entry) { %>
                                <tr>
                                    <td><%= entry.name %></td>
                                    <td><a href="/view/<%= entry.name %>" target="new">VIEW</a></td>
                                </tr>
                            </tbody>
                            <% }) %>
                        </table>
                        <% } else { %>
                        No entries! <a href="/new">Add one!</a>
                        <% } %>
                    </div>
                    <div style="text-align: center;margin-top:10px">
                        <a href="/new"><button class="btn btn-outline-primary">Add New</button></a>
                    </div>
                </div>
            </div>
        </div>
        <% include scripts %>
    </body>
</html>